<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, value: @user.name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, value: @user.email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :self_introduction, '自己紹介' %>
        <%= f.text_area :self_introduction, value: @user.self_introduction, class: "form-control" %>
      </div>
      <%= f.submit '更新', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<% if logged_in? %>
  <% if @user==current_user %> 
    <div class="row mt-3">
      <aside class="col-sm-3">
        <div class="card">
          <img src="<%= gravatar_url(@user, { size: 300 }) %>", class="card-img-top rounded img-fluid" alt="">
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %></h5>
          </div>
        </div>
      </aside>
      <div class="col-sm-1"></div>

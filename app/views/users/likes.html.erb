
<% if @user==current_user %> 

  <div class="row mt-3">
    <aside class="col-sm-3">
      <div class="card">
        <img src="<%= gravatar_url(@user, { size: 300 }) %>", class="card-img-top rounded img-fluid" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
        </div>
      </div>
    </aside>
    <div class="col-sm-1"></div>
    <div class="col-sm-8">
      <div class="row justify-content-end mr-1 mt-1 mb-1">
        <%= link_to 'パスワードを更新', edit_password_path, class: 'text-decoration-none' %>
      </div>
      <div class="card border-light mb-3">
        <div class="card-header">自己紹介</div>
        <div class="card-body">
          <p class="card-text"><%= @user.self_introduction %></p>
        </div>
      </div>
      <div class="row justify-content-end mr-1">
        <%= link_to '編集', edit_user_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>




<div class="row mt-5 ml-3">
  <ul class="nav nav-tabs">
    <li class="nav-item"><a href="<%= user_path(@user)%>" class="nav-link">過去の投稿</a></li>
    <li class="nav-item"><a class="nav-link active">お気に入り</a></li>
  </ul>
</div>

<div class="row mt-3">
    <% @liked_review.each do |review| %>
      <div class="card mt-2 ml-3" style="width: 13rem">
        <div class="card-header bg-white" style="height: 19rem;">
          <img class="card-img-top img-fluid rounded", width="50", height="80", src=<%= review.book.image %> alt = "">
        </div>
        <div class="card-body" style="height: 9rem;">
          <h6 class="font-weight-bold"><%= review.book.author %></h6>
          <p>『<%= review.book.title %>』</p>
        </div>
          <div class="card-footer">
            <%= link_to 'レビューを見る', review_path(review.id), class: "btn" %>
          </div>
      </div>
    <% end %>
</div>
<div class="row mt-4 ml-1">
  <%= paginate @liked_review %>
</div>

<% end %>
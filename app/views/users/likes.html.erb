<div class="container">
  <% if @user==current_user %> 
    <div class="row">
      <aside class="col-sm-3">
        <div class="card">
          <img src="<%= gravatar_url(@user, { size: 300 }) %>", class="card-img-top rounded img-fluid" alt="">
          <div class="card-body">
            <h5 class="card-title"><%= @user.name %></h5>
          </div>
        </div>
      </aside>
      <div class="col-sm-1"></div>
      <div class="col-sm-8">
        <div class="card border-light mb-3">
          <div class="card-header">自己紹介</div>
          <div class="card-body">
            <p class="card-text"><%= @user.self_introduction %></p>
          </div>
        </div>
    </div>
</div>
  
<div class="container">
    <div class="row mt-2">
      <ul class="nav nav-tabs">
        <li class="nav-item"><%= link_to '過去の投稿', @user, class: 'nav-link' %></li>
        <li class="nav-item"><a href="#" class="nav-link">お気に入り</a></li>
      </ul>
    </div>
</div>

<div class="container">    
    <div class="row mt-3">
        <% @liked_review.each do |review| %>
          <div class="card" style="width: 13rem">
            <div class="card-header" style="width: 13rem;">
              <img class="card-img-top img-fluid rounded", width="50", height="80", src=<%= review.book.image %> alt = "">
            </div>
            <div class="card-body">
              <h6 class="font-weight-bold"><%= review.book.author %></h6>
              <p>『<%= review.book.title %>』</p>
              <%= link_to 'レビューを見る', review_path(review.id), class: "btn" %>
            </div>
          </div>
        <% end %>
    </div>
</div>
<% else %>
  <div class="row mt-">
    <aside class="col-sm-3">
      <div class="card">
        <img src="<%= gravatar_url(@user, { size: 300 }) %>", class="card-img-top rounded img-fluid" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
        </div>
      </div>
    </aside>
    <div class="col-sm-1"></div>
    <div class="col-sm-8">
      <div class="card border-light mb-3">
        <div class="card-header">自己紹介</div>
        <div class="card-body">
          <p class="card-text"><%= @user.self_introduction %></p>
        </div>
      </div>
  </div>
  
  <div class="row mt-5 ml-3">
    <ul class="nav nav-tabs">
      <li class="nav-item"><a href="#" class="nav-link active">過去の投稿</a></li>
    </ul>
  </div>
<% end %>
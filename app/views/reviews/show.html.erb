<div class="d-flex flex-row mt-5 justify-content-center">
  <div class="col-sm-2">
    <div class="card">
        <img src="<%= gravatar_url(@review.user, { size: 300 }) %>", class="card-img-top rounded img-fluid" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= @review.user.name %></h5>
        </div>
      </div>
  </div>
  <div class="offset-sm-1 col-sm-7">
    <div class="row">
      <aside class="col-sm-3">
        <img width="130" height="200" src="<%= @review.book.image %>" alt="">
      </aside>
      <div class="offset-sm-1 col-sm-8">
        <h4>『<%= @review.book.title %>』</h4>
      </div>
    </div>
    <div class="row mt-3 ml-2">
      <%= @review.content %>
    </div>
    <div>
      <%= render 'reviews/like_button', review: @review %>
    </div>
  </div>
  <div class="offset-sm-1 col-sm-2">
    <% @reviews.first(3).each do |review| %>
    <div class="card mt-2 ml-3" style="width: 10rem; height: 7rem;">
      <div class="card-header" style="width: 5rem;">
        <img class="card-img-top img-fluid rounded", width="100", height="140", src=<%= review.book.image %> alt = "">
      </div>
      <div class="card-body">
        <h6 class="font-weight-bold"><%= review.book.author %></h6>
        <p>『<%= review.book.title %>』</p>
      </div>
      <div class="card-footer">
        <%= link_to 'レビューを見る', review_path(review.id), class: "btn" %>
      </div>
    </div>
  <% end %>
    
  </div>
</div>

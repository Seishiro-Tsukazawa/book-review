<div class="row">
  <aside class="col-sm-4 mt-5">
    <div class="card ml-4 mb-2" style="width: 15rem;">
      <div class="card-header" style="height: 21rem;">
        <img class="card-img-top" width="100" height="300" src=<%= @review.book.image %> alt="">
      </div>
      <div class="card-body p-0">
        <p><%= @review.book.title %></p>
        <p><%= @review.book.author %></p>
      </div>
    </div>
  </aside>
  <div class="form-group col-sm-8 mt-5">
    <%= form_with(model: @review, local: true) do |f| %>
      <%= f.text_area :content, class: 'form-control' %>
      <div class='float-right mt-2'>
        <%= f.submit '更新', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>

<%= form_with(url: search_books_path, method: :get, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_field :keyword %>
  </div>
  <%= f.submit '検索', class: "btn" %>
<% end %>

<% if @books.present? %>
  <ul>
    <% @books.each do |book| %>
      <li><p><%= book.title %></p></li>
    
      <%= form_with(model: @book, lacal: true) do |f| %>
        <%= hidden_field_tag :isbn, book.isbn %>
        <%= f.submit 'レビューする', class: 'btn' %>
      <% end %>
    <% end %>
  </ul>
<% end %>